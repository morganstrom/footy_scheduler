{
  "name": "footy-scheduler",
  "version": "1.0.0",
  "description": "Football team schedule planner",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "npm run build && http-server . -p 8080 -o"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^22.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "*.ts",
      "!*.test.ts"
    ]
  }
}
